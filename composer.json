{
    "name": "afragen/the-events-calendar-category-colors",
    "description": "This plugin adds event category background coloring to The Events Calendar plugin.",
    "type": "wordpress-plugin",
    "keywords": [
        "modern tribe",
        "events",
        "calendar",
        "category",
        "colors"
    ],
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Andy Fragen",
            "email": "andy@thefragens.com",
            "homepage": "https://thefragens.com",
            "role": "Developer"
        },
        {
            "name": "Barry Hughes",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/the-events-calendar/the-events-calendar-category-colors"
        }
    ],
    "support": {
        "issues": "https://github.com/the-events-calendar/the-events-calendar-category-colors/issues",
        "source": "https://github.com/the-events-calendar/the-events-calendar-category-colors"
    },
    "prefer-stable": true,
    "require": {
        "php": ">=7.1"
    },
    "require-dev": {
        "wp-coding-standards/wpcs": "^3.0.0"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "Fragen\\Category_Colors\\": "src/Category_Colors/"
        }
    },
    "scripts": {
        "make-pot": [
            "wp i18n make-pot . languages/the-events-calendar-category-colors.pot"
        ],
        "wpcs": [
            "vendor/bin/phpcbf .; vendor/bin/phpcs ."
        ]
    }
}
